---
import { useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const stats = [
  { num: t.nosotros.stat1Num, label: t.nosotros.stat1Lab },
  { num: t.nosotros.stat2Num, label: t.nosotros.stat2Lab },
  { num: t.nosotros.stat3Num, label: t.nosotros.stat3Lab },
  { num: t.nosotros.stat4Num, label: t.nosotros.stat4Lab },
];

const valores = [
  {
    titulo: t.nosotros.val1Tit,
    desc:   t.nosotros.val1Desc,
    /* Icono: cuaderno con check (rigor técnico) */
    svg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
            d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
            d="M9 5a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2 2 2 0 0 0-2-2h-2a2 2 0 0 0-2 2z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
            d="M9 12l2 2 4-4"/>`,
  },
  {
    titulo: t.nosotros.val2Tit,
    desc:   t.nosotros.val2Desc,
    /* Icono: pin de ubicación (presencia en campo) */
    svg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"
            d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
          <circle cx="12" cy="9" r="2.5" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" fill="none"/>`,
  },
  {
    titulo: t.nosotros.val3Tit,
    desc:   t.nosotros.val3Desc,
    /* Icono: flecha tendencia ascendente (resultados) */
    svg: `<polyline points="22 7 13.5 15.5 8.5 10.5 2 17" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"/>
          <polyline points="16 7 22 7 22 13" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8"/>`,
  },
];
---

<section
  id="nosotros"
  class="nosotros-section w-full px-6 pt-10 pb-18 md:px-16 md:pt-14 md:pb-28"
>
  <div class="max-w-300 mx-auto flex flex-col gap-14">

    <!-- ── Intro ── -->
    <div class="flex flex-col items-center text-center gap-4 max-w-2xl mx-auto">

      <span class="inline-flex items-center gap-1.5
                   text-[0.72rem] font-bold tracking-[0.12em] uppercase
                   text-(--color-contrast) border border-(--color-contrast)/30
                   px-3.5 py-1.5 rounded-full">
        {t.nosotros.badge}
      </span>

      <h2 class="text-[clamp(1.8rem,3.5vw,2.8rem)] font-extrabold leading-[1.15]
                 mt-0 mb-0 text-(--color-text)">
        {t.nosotros.titulo}
      </h2>

      <p class="text-[1.05rem] leading-[1.75] text-(--color-text)/60 mt-0 mb-0">
        {t.nosotros.desc}
      </p>

    </div>

    <!-- ── Estadísticas ── -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {stats.map(s => (
        <div class="stat-card flex flex-col items-center text-center gap-1 py-7 px-4 rounded-2xl">
          <span class="text-[2.2rem] font-extrabold leading-none text-(--color-primary)">
            {s.num}
          </span>
          <span class="text-[0.82rem] font-medium text-(--color-text)/55 leading-snug">
            {s.label}
          </span>
        </div>
      ))}
    </div>

    <!-- ── Valores / Pilares ── -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {valores.map(v => (
        <div class="valor-card group flex flex-col gap-5 p-8 rounded-2xl
                    transition-all duration-200 hover:-translate-y-1 hover:shadow-lg">

          <!-- Icono -->
          <div class="valor-icon w-12 h-12 rounded-xl flex items-center justify-center shrink-0">
            <svg
              class="w-6 h-6 text-(--color-primary)"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              set:html={v.svg}
            />
          </div>

          <!-- Texto -->
          <div class="flex flex-col gap-2">
            <h3 class="text-base font-bold text-(--color-text) mt-0 mb-0">
              {v.titulo}
            </h3>
            <p class="text-sm leading-relaxed text-(--color-text)/60 mt-0 mb-0">
              {v.desc}
            </p>
          </div>

          <!-- Línea decorativa -->
          <div class="h-0.5 w-10 rounded-full mt-auto accent-line"></div>

        </div>
      ))}
    </div>

    <!-- ── CTA ── -->
    <div class="flex justify-center">
      <a
        href={`/${lang}/#contacto`}
        class="bg-(--color-primary) text-white
               px-7 py-3 rounded-lg font-semibold text-[0.95rem]
               no-underline transition-all duration-200
               hover:opacity-90 hover:-translate-y-px"
      >
        {t.nosotros.cta}
      </a>
    </div>

  </div>
</section>

<style>
  .nosotros-section {
    background: var(--color-base);
  }

  .stat-card {
    background: color-mix(in srgb, var(--color-primary) 6%, var(--color-base));
    border: 1px solid color-mix(in srgb, var(--color-primary) 12%, transparent);
  }

  .valor-card {
    background: var(--color-base);
    border: 1px solid color-mix(in srgb, var(--color-primary) 14%, transparent);
  }
  .valor-card:hover {
    border-color: color-mix(in srgb, var(--color-primary) 35%, transparent);
  }

  .valor-icon {
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
  }

  .accent-line {
    background: color-mix(in srgb, var(--color-primary) 40%, transparent);
  }
</style>
